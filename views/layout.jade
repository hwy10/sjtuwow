- var title = '程序员修炼之道'
- var logo = '/static/images/brand.jpg'

doctype html
html
	head
		title= title
		link(rel='stylesheet', href='/static/stylesheets/bootstrap.min.css')
		link(rel='stylesheet', href='/static/stylesheets/style.css')
		link(rel='stylesheet', href='/static/stylesheets/editormd.min.css')
		script(type='text/javascript', src='/static/javascripts/jquery-2.1.4.min.js')
		script(type='text/javascript', src='/static/javascripts/bootstrap.min.js')
		script(type='text/javascript', src='/static/javascripts/knockout-3.3.0.js')
		script(type='text/javascript', src='/static/javascripts/knockout.validation.min.js')
		script(type='text/javascript', src='/static/javascripts/editormd.min.js')
		link(rel='shortcut icon', type='image/x-icon', href=logo, media='screen')
	body
		nav.navbar.navbar-default
			div.container
				div.navbar-header
					a.navbar-brand(href='#')
						span
							img.brand(alt=title,src=logo,width='30',height='30')
						span #{title}
				div.collapse.navbar-collapse
					ul.nav.navbar-nav
						li(class=(activePage == 'index' ? 'active' : ''))
							a(href='/') 主页
						li(class=(activePage == 'changeInfo' ? 'active' : ''))
							a(href='/users/changeInfo') 修改信息
						li(class=(activePage == 'newActivity' ? 'active' : ''))
							a(href='/activity/newActivity') 创建活动
					ul.nav.navbar-nav.navbar-right
						li.dropdown
							if (user)
								a(href='#',class="dropdown-toggle",data-toggle="dropdown",role="button",aria-haspopup="true",aria-expanded="false") #{user.name}
									span.caret
								ul.dropdown-menu
									li
										a(href='/users/changeInfo') 更改信息
									li
										a(href='/') 查看活动
									li
										a(href='/users/logout') 登出
							else
								a(href='#',class="dropdown-toggle",data-toggle="dropdown",role="button",aria-haspopup="true",aria-expanded="false") 尚未登录
									span.caret
								ul.dropdown-menu
									li
										a(href='/users/register') 注册
									li
										a(href='/users/login') 登陆
						
	block content
