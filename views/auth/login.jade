extends ../layout

block content
  div.container
    div.row
      div.col-md-6.col-md-offset-3
        h3 登陆
        form(role="form",class="form-horizontal",data-bind="submit: submit")
          div.form-group
            label(for="username") 用户名
            input(type="text",class="form-control",id='username',name='username',placeholder='用户名',required,data-bind="value: form.username, event:{change:validate}")
          div.form-group
            label(for="password") 密码
            input(type="password",class="form-control",id='password',name='password',placeholder='密码',required,data-bind="value: form.password, event:{change:validate}")
          div.form-group(data-bind="visible:message")
            div.alert.alert-danger(data-bind="text:message")
          div.form-group.btn-toolbar
            button(type='submit',class='btn btn-primary') 提交
            a.btn.btn-default(href='/users/register',role='button') 注册
  script(type='text/javascript',src="/static/javascripts/login.js")
