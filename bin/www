#!/usr/bin/env node

/**
 * Module dependencies.
 */


var settings = require('../settings.js');
var app = require('../app');
var debug = require('debug')('sjtuwow:server');
var https = require('https');
var http = require('http');
var fs = require('fs');
var db = require('../models').db;

app.set('env',settings.ENV)
/**
 * Normalize a port into a number, string, or false.
 */
function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Get port from environment and store in Express.
 */
 
var port = normalizePort(process.env.PORT || settings.SEVER_PORT);
app.set('port', port);

function createServer() {
  if (app.get('env')=="development") {
	var httpsopt = {
      key: fs.readFileSync(settings.SITE_HTTPS_KEY),
      cert: fs.readFileSync(settings.SITE_HTTPS_CERT)  
    };
    
    /**
     * Create HTTPS server.
     */
    
    return https.createServer(httpsopt, app);
  }
  else {
    /**
     * Create HTTP server.
     */

    return http.createServer(app);
  }
}

var server = createServer()


/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  debug('Listening on ' + bind);
}

/**
 * Start server after init db.
 */
db.sync({ hooks: true }).then(function () {
  /**
   * Listen on provided port, on all network interfaces.
   */
  server.listen(port);
  server.on('error', onError);
  server.on('listening', onListening); 
});
